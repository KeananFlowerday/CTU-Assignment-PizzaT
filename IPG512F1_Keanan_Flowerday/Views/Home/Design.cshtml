

<div id="myCarousel" class="carousel slide" data-ride="carousel">

    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>


    <div class="carousel-inner">
        <div class="item active">
            <img src="~/Content/Assets/Images/Fotolia_41104275_Subscription_Monthly_XXL.jpg" alt="Fotolia" style="height : 667px; width: 1140px;">
        </div>

        <div class="item">
            <img src="~/Content/Assets/Images/36a34509b23136c9a0d2250fd44a2326.img.jpg" alt="Oven Pizza" style="height : 667px; width: 1140px;">
        </div>

        <div class="item">
            <img src="~/Content/Assets/Images/pizza.jpg" alt="Pizza" style="height : 667px; width: 1140px;">
        </div>
    </div>


    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="rcorners2 col-md-12" style="position: absolute;
    top: 30px;
    width: 80%;
    height: 80%;
    left: 10%;
    background-color: rgba(0,0,0,0.8);
    align-content: center;">
    <div class="col-md-12 col-lg-12" style="height : 90%">
        <div class="btn-group" data-toggle="buttons" style="width: 30%;
    left: 35%;
    top: 10px;">
            <label class="btn btn-primary active">
                <input type="radio" name="options" id="option1" checked=""> Small
            </label>
            <label class="btn btn-primary">
                <input type="radio" name="options" id="option2"> Medium
            </label>
            <label class="btn btn-primary">
                <input type="radio" name="options" id="option3"> Large
            </label>
        </div>
        <div style="position: absolute;
    top: 60px;" class="btn-group" data-toggle="buttons">
            @{foreach (var item in ViewBag.Ingredients)
                {
                    if (item.Name.Contains("Base"))
                    {
                        <label class="btn btn-primary">
                            <input type="radio" name="options" id=" @item.Name">@item.Name
                        </label>
}
                }
            }
        </div>
        <div class="btn-group-justified" data-toggle="buttons" style="width : 100% ;position : absolute; top: 25%; left : 10%;">

            @{foreach (var item in ViewBag.Ingredients)
                {
                    if (!item.Name.Contains("Base"))
                    {
                        <button style=" margin : 3px;"  id="@item.Name" type="button" class="btn btn-primary col-md-4 col-lg-3" >@item.Name</button>
}
                }
            }

        </div>
       
    </div>
    <div style="height: 100%" class=" col-md-12">
      
        <input type="submit" value="Save" class="btn btn-primary btn-lg col-lg-3" />
       
    </div>
</div>


                }